{
	"arrowParens": "always",
	"bracketSpacing": true,
	"printWidth": 100,
	"semi": true,
	"singleQuote": true,
	"tabWidth": 4,
	"trailingComma": "none",
	"useTabs": true,
	"overrides": [
		{
			"files": "*.md",
			"options": {
				"tabWidth": 2,
				"useTabs": false
			}
		},
		{
			"files": "*.pug",
			"options": {
				"singleQuote": false
			}
		}
	]
}
