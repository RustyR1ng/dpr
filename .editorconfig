root = true

[*]
indent_style = tab
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.js]
indent_style = space

[*.md]
max_line_length = off
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

[*.pug]
indent_style = tab

[*.min.*]
indent_style = ignore
trim_trailing_whitespace = false
insert_final_newline = ignore
